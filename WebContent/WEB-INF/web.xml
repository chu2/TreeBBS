<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:javaee="http://java.sun.com/xml/ns/javaee" xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.5">

  <servlet>
    <servlet-name>TreeServlet</servlet-name>
    <servlet-class>treebbs.TreeServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>PostServlet</servlet-name>
    <servlet-class>treebbs.PostServlet</servlet-class>
  </servlet>
  <servlet>
    <servlet-name>ThreadServlet</servlet-name>
    <servlet-class>treebbs.ThreadServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>TreeServlet</servlet-name>
    <url-pattern>/treebbs/TreeServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>PostServlet</servlet-name>
    <url-pattern>/treebbs/PostServlet</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
    <servlet-name>ThreadServlet</servlet-name>
    <url-pattern>/treebbs/ThreadServlet</url-pattern>
  </servlet-mapping>
</web-app>